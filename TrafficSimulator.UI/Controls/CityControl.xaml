<UserControl x:Class="TrafficSimulator.UI.Controls.CityControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrafficSimulator.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="40"
             Width="40" Height="40">
    <Grid>
        <Ellipse x:Name="CityBorder" Fill="White" Stroke="Black" StrokeThickness="2"/>
        <Ellipse x:Name="CityFill" Fill="#3F51B5" Width="30" Height="30" />
        <TextBlock x:Name="CityLabel" Text="City" Foreground="White" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontWeight="Bold" FontSize="10" />
        <TextBlock x:Name="CityName" Text="CityName" Foreground="Black"
                   HorizontalAlignment="Center" VerticalAlignment="Bottom"
                   Margin="0,0,0,-18" FontSize="10" />
    </Grid>
</UserControl>